@model Layer.Data.TblKategoriler
@{
	ViewData["Title"] = "Sil";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
	<h5>@Model.KategoriAdi isimli ürünü silmek istediğinden emin misin ?</h5>
	<dl class="row">
		<dt class="col-sm-2">
			Kategori Id
		</dt>

		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.KategoriId)
		</dd>
		<dt class="col-sm-2">
			Kategori Adı
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.KategoriAdi)
		</dd>
	</dl>

	<form asp-controller="Kategori" asp-action="Sil" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" name="id" value="@Model.KategoriId" />
		<input type="submit" value="Sil" class="btn btn-danger" />
		<a href="/Kategori">geri dön</a>
	</form>
</div>


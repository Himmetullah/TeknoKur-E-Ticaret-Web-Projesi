@using Layer.Data;
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<h2>Üye Ekleme formu</h2>
	<hr />

	@if (ViewBag.ErrorMessage != null)
	{
		<div class="alert alert-danger">
			@ViewBag.ErrorMessage
		</div>
	}

	<div class="col-md-4">
		@using (Html.BeginForm("Yeni", "Uye", FormMethod.Post))
		{
			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="text" class="form-control" id="UyeMailAdresi" placeholder="E-Mail Adresi" name="UyeMailAdresi">
					<label for="UyeMailAdresi">E-Mail Adresi</label>
				</div>
			</div>

			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="password" class="form-control" id="UyeSifre" placeholder="Şifre" name="UyeSifre">
					<label for="UyeSifre">Şifre</label>
				</div>
				<input type="checkbox" id="UyeAdmin" placeholder="Admin" name="UyeAdmin">
				<label for="UyeAdmin">Admin</label>
			</div>

			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="text" class="form-control" id="UyeKisiAd" placeholder="Ad" name="UyeKisiAd">
					<label for="UyeKisiAd">Ad</label>
				</div>
			</div>
			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="text" class="form-control" id="UyeKisiSoyad" placeholder="Soyad" name="UyeKisiSoyad">
					<label for="UyeKisiSoyad">Soyad</label>
				</div>
			</div>
			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="text" class="form-control" id="UyeKisiTc" placeholder="Tc" name="UyeKisiTc">
					<label for="UyeKisiTc">T.C.K</label>
				</div>
			</div>
			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<input type="date" class="form-control" id="UyeKisiDogumTarihi" placeholder="Duğum Tarihi" name="UyeKisiDogumTarihi">
					<label for="UyeKisiDogumTarihi">Doğum Tarihi</label>
				</div>
			</div>
			<div class="card-body demo-vertical-spacing demo-only-element">
				<div class="form-floating form-floating-outline mb-6">
					<select id="UyeKisiCinsiyet" name="UyeKisiCinsiyet" class="form-control">
						<option value="">-- Cinsiyet Seçiniz --</option>
						<option value="Erkek">Erkek</option>
						<option value="Kadın">Kadın</option>
					</select>
				</div>

			</div>

		<div class="col-md-12">
			<div class="d-flex align-items-center justify-content-md-end justify-content-center">
				<a href="/Uye">Üye Listesine Git</a>
				<div class="add-new">
					<button class="btn btn-primary waves-effect waves-light" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddUser">
						<i class="ri-add-line me-0 me-sm-1 d-inline-block d-sm-none"></i>
						<span class="d-none d-sm-inline-block"> Kaydet </span>
					</button>
				</div>
			</div>
		</div>
				}
	</div>
</div>





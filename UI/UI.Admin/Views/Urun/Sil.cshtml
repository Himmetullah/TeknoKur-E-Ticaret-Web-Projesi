@model Layer.Data.TblUrun
@{
	ViewData["Title"] = "Sil";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
	<h5>@Model.UrunAdi isimli ürünü silmek istediğinden emin misin ?</h5>
	<dl class="row">
		<dt class="col-sm-2">
			Ürün Id
		</dt>

		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UrunId)
		</dd>
		<dt class="col-sm-2">
			Ürün Adı
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UrunAdi)
		</dd>
	</dl>

	<form asp-controller="Urun" asp-action="Sil" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" name="id" value="@Model.UrunId" />
		<input type="submit" value="Sil" class="btn btn-danger" />
		<a href="/Urun">geri dön</a>
	</form>
</div>


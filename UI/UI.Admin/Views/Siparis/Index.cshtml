@model List<Layer.Data.TblSiparis>
@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4">Siparişlerim</h3>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Sipariş Tarihi</th>
                    <th>Toplam Tutar</th>
                    <th>Ödeme Durumu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var siparis in Model)
                {
                    <tr>
                        <td>@siparis.SiparisId</td>
                        <td>@siparis.SiparisTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@siparis.ToplamTutar ₺</td>
                        <td>@siparis.OdemeDurumu</td>
                        <td>
                            <a href="/Siparis/Detay/@siparis.SiparisId" class="btn btn-info btn-sm">Detay</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">Hiç siparişiniz bulunmamaktadır.</div>
    }
</div>
